@using MinhaPrimeiraAplicacaoWeb.Models.Carros
@model CarrosModel
<div class="text-center">
    <table class="table table-striped">
        <h3 class="float-start">Carros</h3>
        <a type="button" class="btn btn-primary float-end" asp-controller="Carros" asp-action="Record">Novo</a>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Placa</th>
                <th>Ano</th>
                <th>Categoria</th>
                <th>Marca</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carro in Model.Carros)
            {
                <tr>
                    <td>@carro.ID</td>
                    <td>@carro.Nome</td>
                    <td>@carro.Placa</td>
                    <td>@carro.Ano</td>
                    <td>@carro.Categoria.ToString()</td>
                    <td>@carro.Marca.Nome</td>
                    <td>
                        <a type="button" class="btn btn-primary" asp-controller="Carros" asp-action="Record" asp-route-id="@carro.ID">Abrir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>